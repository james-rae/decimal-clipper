{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2021"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "types": ["node"],
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.ts"]
}
